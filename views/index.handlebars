<div class="container">
            <div class="row">
                <div class="col-xs-12 text-center" id="top-bar">
                  <img src="./assets/img/wimpy.png" alt="burger" class="burgerImg" />
                  <h1 id="titles"> Eat-Da-Burger! </h1>
                </div>
            </div>

            <h2 id="titles">Add a Burger</h2>
            <p>Enter a burger you want to eat Click the "Submit" button.</p>
          <div class="container">
            <div class="row">
              <div class="col-xs-6 text-center enter_section">
                <form class="create-form">
                  <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input type="text" class= "form-control" id="ca" name="name">
                  </div>
                <button type="submit" class="btn btn-primary" id="submit-button">Submit</button>
              </div>
            </div>
          </div> 
        <div class="container">
          <div class="row">
            <div class="col-md-6">
              <h2 id="titles">My Burgers!</h2>
              <ul>
                {{#each burgers}}
                  {{#unless devoured}}
                    {{> burgers/burger-block devoure=true}}
                  {{/unless}}
                {{/each}}
              </ul>
            </div>
          <div class="col-md-6">
            <h2 id="titles">Devoured Burgers!</h2>
            <ul>
              {{#each burgers}}
                {{#if devoured}}
                  {{> burgers/burger-block devoure=false}}
                {{/if}}
              {{/each}}
            </ul>
          </div>
        </div>
      </div> 
    </form>
 </div>

  